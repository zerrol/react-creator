
{
  "presets": [
    [
      "@babel/preset-env", 
      {
        // tree shacking 只支持 es6 module 模式
        "modules": false,
        "targets": {
          "browsers": ["> 1%", "last 2 versions"]
        },
        // 按需加载polyfill
        "useBuiltIns": "usage",
        "corejs": 2
      }, 
    ],
    "@babel/preset-typescript",
    "@babel/preset-react"
  ], 
  "plugins": [
    // 解决在class中直接写入属性报错
    "@babel/plugin-proposal-class-properties",
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": 2
      }
    ],
  ]
}